<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:title="MQTT Setting"
        android:key="pref_key_mqtt_setting">

    <EditTextPreference
        android:key="pref_key_client_id"
        android:title="Client ID"
        android:summary="Unique client ID"
        android:defaultValue="@string/pref_default_client_id"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_key_server"
        android:title="Server"
        android:summary="Host name or IP address of the MQTT server"
        android:defaultValue="@string/pref_default_server"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_key_port"
        android:title="Port"
        android:summary="MQTT Port number"
        android:defaultValue="@string/pref_default_port"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <CheckBoxPreference
        android:key="pref_key_clean_session"
        android:title="Clean Session"
        android:summary="Clean Session"
        android:defaultValue="true" />


    </PreferenceCategory>


</PreferenceScreen>
